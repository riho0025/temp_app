.wrapper.select
  #account-page.account-page
    .account-page__inner--left.account-page__header
      %p UPDATE
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name do
              %i.fab.fa-android Name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email do
              %i.far.fa-envelope Email
          .field-input
            = f.email_field :email
        .actions.editaction
          = f.submit "Update", class: 'btn updatebtn'
          = link_to "ログアウト", '#', class: 'btn logoutbtn'
          = link_to "トップページに戻る", :back, class: 'btn topbtn'
