<% if user_signed_in? %>
  <div class="wrapper">
    <div class="chat-side">
      <div class="side-header">
        <div class="side-header__box">
          <ul class="side-header__box__box">
            <li class="side-header__box__logo">
              <%= link_to "TEMP APP", root_path %>
            </li>
            <li class="side-header__box__new">
              <%= link_to icon('fas', 'edit', class: 'icon'), new_record_path %>
          </ul>
        </div>
      </div>
      <div class="users">
        <div class="users__current-user">
          <%= current_user.name %>
        </div>
        <% @users.each do |user| %>
          <div class="users__user__name">
            <%= link_to(user.name, "/users/#{user.id}") %>
          </div>
        <% end %>
      </div>
    </div> 
    <div class="chat-main">
      <div class="chat-main__header">
        <div class="chat-main__header__left">
          <p class="chat-main__header__left__current-name">
          </p>
        </div>
        <div class="grid-6">
          <%= link_to "Edit", edit_user_path(current_user), class: "chat-main__header__left__edit-btn" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'chat-main__header__left__logout-btn' %>
        </div>
      </div>
      <div class="records">
        <%= render "graph" %>
      </div>
    </div>
  </div>
<% else %>
  <div class="wrapper">  
    <div class="btn__box">
      <%= link_to "ログイン", new_user_session_path, class:'left__box' %>
      <%= link_to "新規登録", new_user_registration_path, class:'left__box' %>
    </div>
  </div>
<% end %>
