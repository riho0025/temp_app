<% if user_signed_in? %>
  <div class="wrapper">
    <div class="side-bar">
      <div class="side-bar__lists">
        <div class="side-bar__lists__list">
          <%= link_to root_path do %>
            <i class="fas fa-crown  fa2-x"></i>
            Toppage
          <% end %>
        </div>
        <div class="side-bar__lists__list">
          <%= link_to record_path(current_user) do %>
            <fa2-x class="fa fa-android fa2-x">
            Mypage
          <% end %>
        </div>
        <div class="side-bar__lists__list">
          <%= link_to new_record_path do %>
            <i class="fas fa-edit fa2-x"></i>
            Data form
          <% end %>
        </div>
        <div class="side-bar__lists__list">
          <%= link_to edit_user_path(current_user) do %>
            <i class="fas fa-cog fa2-x"></i>
            Edit user info
          <% end %>
        </div>
        <div class="side-bar__lists__list">
          <%= link_to destroy_user_session_path, :method => :delete do %>
            <i class="fas fa-sign-out-alt fa2-x"></i>
            Logout
          <% end %>
        </div>
      </div>
    </div>
    <div class="main-record">
      <div class="main-record__header">
        <div class="main-record__header__name">
          <%= current_user.name %>
        </div>
      </div>
      <div class="main-record__graph">
        <%= render "graph" %>
      </div>
    </div> 
  </div>
<% else %>
  <div class="wrapper">  
    <div class="btn__box">
      <%= link_to "ログイン", new_user_session_path, class:'left__box' %>
      <%= link_to "新規登録", new_user_registration_path, class:'left__box' %>
    </div>
  </div>
<% end %>

