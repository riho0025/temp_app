%canvas#myChart
:javascript
  var ctx = document.getElementById('myChart').getContext('2d');
  var chart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: #{raw @graph_date},
      datasets: [{
        label: 'weight',
        data: #{raw @graph_records},
        backgroundColor: 'rgb(75, 192, 192)',
        borderColor: 'rgb(75, 192, 192)',
        fill: false
      }]
    },
  });
